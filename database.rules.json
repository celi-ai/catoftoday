{
  "database": {
    "rules": {
      "patCount": {
        ".read": true,
        ".write": true
      },
      "$other": {
        ".read": false,
        ".write": false
      }
    }
  },
  "storage": {
    "rules_version": "2",
    "service": {
      "firebase.storage": {
        "match": {
          "/b/{bucket}/o": {
            "match": {
              "/{allPaths=**}": {
                "allow read: if true;"
                "allow write: if request.auth != null;"
              }
            }
          }
        }
      }
    }
  }
}
